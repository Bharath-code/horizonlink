---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  [key: string]: any;
}

const { class: className, ...rest } = Astro.props;
---

<div
  class={cn(
    "rounded-2xl border border-border bg-surface/50 backdrop-blur-sm p-6 shadow-card transition-all duration-300 hover:border-primary/50 hover:shadow-soft",
    className
  )}
  {...rest}
>
  <slot />
</div>
