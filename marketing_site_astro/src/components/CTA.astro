---
import Button from "./ui/Button.astro";
import BackgroundGradient from "./ui/BackgroundGradient.astro";
---

<section class="py-24 relative px-4">
    <div class="mx-auto max-w-5xl">
        <BackgroundGradient containerClassName="rounded-3xl">
            <div
                class="relative rounded-3xl bg-background px-6 py-16 sm:px-16 sm:py-24 text-center overflow-hidden"
            >
                <div class="relative z-10">
                    <h2
                        class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6"
                    >
                        Ready to start tracking?
                    </h2>
                    <p class="mx-auto max-w-2xl text-lg text-muted mb-10">
                        Join thousands of users who trust HorizonLink for their
                        location sharing needs. Get started for free today.
                    </p>
                    <div
                        class="flex flex-col sm:flex-row items-center justify-center gap-4"
                    >
                        <Button size="lg" href="/signup">Get Started Now</Button
                        >
                        <Button variant="outline" size="lg" href="/contact"
                            >Contact Sales</Button
                        >
                    </div>
                </div>

                <!-- Decorative background elements -->
                <div
                    class="absolute top-0 left-0 w-full h-full overflow-hidden -z-0 opacity-30 pointer-events-none"
                >
                    <div
                        class="absolute top-[-50%] left-[-20%] w-[70%] h-[70%] rounded-full bg-primary/20 blur-[100px]"
                    >
                    </div>
                    <div
                        class="absolute bottom-[-50%] right-[-20%] w-[70%] h-[70%] rounded-full bg-accent/20 blur-[100px]"
                    >
                    </div>
                </div>
            </div>
        </BackgroundGradient>
    </div>
</section>
