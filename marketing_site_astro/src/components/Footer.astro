---
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-white/10 bg-background py-12">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <div class="col-span-1 md:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div
            class="h-8 w-8 rounded-lg bg-gradient-to-br from-primary to-accent"
          >
          </div>
          <span class="text-xl font-bold text-white">HorizonLink</span>
        </a>
        <p class="text-muted max-w-xs">
          Advanced live location tracking for individuals and enterprises.
          Secure, fast, and reliable.
        </p>
      </div>

      <div>
        <h3 class="font-semibold text-white mb-4">Product</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="#features"
              class="text-muted hover:text-primary transition-colors"
              >Features</a>
          </li>
          <li>
            <a
              href="#pricing"
              class="text-muted hover:text-primary transition-colors"
              >Pricing</a>
          </li>
          <li>
            <a
              href="/download"
              class="text-muted hover:text-primary transition-colors"
              >Download</a>
          </li>
          <li>
            <a
              href="/api"
              class="text-muted hover:text-primary transition-colors">API</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold text-white mb-4">Company</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/about"
              class="text-muted hover:text-primary transition-colors">About</a>
          </li>
          <li>
            <a
              href="/blog"
              class="text-muted hover:text-primary transition-colors">Blog</a>
          </li>
          <li>
            <a
              href="/careers"
              class="text-muted hover:text-primary transition-colors"
              >Careers</a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-muted hover:text-primary transition-colors"
              >Contact</a>
          </li>
        </ul>
      </div>
    </div>

    <div
      class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-sm text-muted">
        &copy; {currentYear} HorizonLink. All rights reserved.
      </p>
      <div class="flex gap-6">
        <a
          href="/privacy"
          class="text-sm text-muted hover:text-white transition-colors"
          >Privacy Policy</a
        >
        <a
          href="/terms"
          class="text-sm text-muted hover:text-white transition-colors"
          >Terms of Service</a
        >
      </div>
    </div>
  </div>
</footer>
